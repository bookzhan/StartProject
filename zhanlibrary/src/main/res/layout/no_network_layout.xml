<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/error_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:visibility="gone">

    <net.ghs.widget.CommonNavigation
        android:id="@+id/error_naviagation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:title="出错了" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/no_network" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="亲，网络不给力!"
            android:textColor="@color/common_text_color"
            android:textSize="16sp" />

        <Button
            android:id="@+id/bt_to_refresh"
            android:layout_width="135dp"
            android:layout_height="35dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/selector_common_bt_stroke_bg_purple"
            android:text="点我重试"
            android:textColor="@color/selector_text_purple_and_pink_color"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>