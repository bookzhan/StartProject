<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/color_eee</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:scrollbarThumbVertical">@color/scrollbar_color</item>
        <item name="android:scrollbarSize">3dp</item>
        <item name="android:buttonStyle">@style/commonButton</item>

    </style>

    <style name="commonButton">
        <item name="android:background">@drawable/selector_shape_purple_and_pink_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/selector_text_purple_and_pink_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
