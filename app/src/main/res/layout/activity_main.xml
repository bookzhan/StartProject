<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bookzhan.activity.MainActivity">

    <com.zhanlibrary.widget.CommonNavigation
        android:id="@id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="教学" />

    <com.zhanlibrary.widget.UnScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <View style="@style/common_mini_line_style" />

    <com.zhanlibrary.widget.MyTabHost
        android:id="@+id/my_tab_host"
        android:layout_width="match_parent"
        android:layout_height="35dp" />

</LinearLayout>
